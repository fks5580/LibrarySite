@model LibrarySite.Models.Book
<div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
        <form class="form-horizontal" method="post" asp-controller="Book" asp-action="Add">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label>제목</label>
                <input type="text" class="form-control" asp-for="BookTitle" placeholder="제목 입력" />
                <span class="text-danger" asp-validation-for="BookTitle"></span>
            </div>
            <div class="form-group">
                <label>저자</label>
                <input type="text" class="form-control" asp-for="BookWriter" placeholder="저자 입력" />
                <span class="text-danger" asp-validation-for="BookWriter"></span>
            </div>
            <div class="form-group">
                <label>요약</label>
                <input type="text" class="form-control" asp-for="BookSummary" placeholder="요약 입력" />
            </div>
            <div class="form-group">
                <label>출판사</label>
                <input type="text" class="form-control" asp-for="BookPublisher" placeholder="출판사 입력" />
                <span class="text-danger" asp-validation-for="BookPublisher"></span>
            </div>
            <div class="form-group">
                <label>출판일</label>
                <input type="date" class="form-control" asp-for="BookPublish_date" placeholder="출판일 입력" />
                <span class="text-danger" asp-validation-for="BookPublish_date"></span>
            </div>
            <div class="form-group">
                <label>위치</label>
                <input type="text" class="form-control" asp-for="BookLocation" placeholder="위치 입력" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">저장</button>
                <a class="btn btn-default" asp-controller="Book" asp-action="Index">취소</a>
            </div>
        </form>
    </div>
    <div class="col-lg-2"></div>
</div>